<%- include ('./partials/header') %>

<%- include ('./partials/homenavbar') %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo</h1>
            <p class="lead">Este é um simples blog</p>
            <hr class="my-4">
            <p>Você pode criar categorias, escrever artigos e muito mais...</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Aprenda mais...</a>
          </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div><br>
            </div>
        <% }) %>
    </div>
</body>

<%- include ('./partials/footer') %>