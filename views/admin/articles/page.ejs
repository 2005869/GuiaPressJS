<%- include ('../../partials/header') %>

<%- include ('../../partials/homenavbar') %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div><br>
            </div>
        <% }) %>
            <div class="col col-12 text-center">
                <div class="card-body">
                  <h5 class="card-title">Artigos disponíveis</h5>
                  <p class="card-text"><%= result.articles.count %></p>
                  <% if (result.next == true) { %>
                    <a href="/articles/page/<%= result.page + 1 %>" class="btn btn-primary" style="display: right;">Próximo</a>
                    <% } %>
                    <% if (result.page > 1) { %>
                        <a href="/articles/page/<%= result.page - 1 %>" class="btn btn-primary" style="float: left;">Anterior</a>
                        <% } %>
                </div>
              </div>
    </div>
</body>

<%- include ('../../partials/footer') %>