<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr>
    <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
    <table class="table table-bodered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                            <button class="btn btn-warning">Editar</button>
                        <form action="/categories/delete" method="post" style="display: inline;" onsubmit="confirmarDelete(event, this)" >
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger"> Deletar</button>
                        </form>
                        
                        
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer') %>

<script>
    function confirmarDelete(event, form){
        event.preventDefault();
        var decision  = confirm('Você quer mesmo deletar essa categoria?');
        if (decision){
            console.log('eu escolhi deletar');
            form.submit();
        }
        else{
            console.log('eu não quero deletar');
        }
    }
</script>